doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title {{{title}}}
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(http-equiv='x-ua-compatible' content='ie=edge')
    meta(name='keywords' content='')
    meta(name='robots' content='index,follow')
    |     {{#nightMode}}
    link(rel='stylesheet' href='https://jenil.github.io/bulmaswatch/superhero/bulmaswatch.min.css')
    style.
      .pagination-link, .pagination-next, .pagination-previous {
        color: #8694a4;
      }

      .tag {
        border: 1px solid #31404f !important;
        background-color: inherit !important;
      }

      input.input, .select select {
        background-color: #1f2d3b;
        border: none;
        color: white;
      }

      input.input:focus, input.input:active, input.input:hover {
          border: none !important;
          outline: none !important;
          -webkit-box-shadow: none;
          box-shadow: none;
      }

      .tags.has-addons .tag.is-white {
        background-color: #1a2531;
        color: #f5f5f5;
      }

      .has-background-light	{
        background-color: #1c252f !important;
      }

      input[type='text'] {
        background-color: #1f2d3b !important;
        color: white;
      }

      input::placeholder {
        color: #fff !important;
      }

      .notification.overrideVueNotificationsIssue {
        background-color: #2b3e50;
      }
    |     {{/nightMode}}
    |     {{^nightMode}}
    link(rel='stylesheet' href='//cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css')
    style.
      body, button, input, select, textarea {
        font-family: Arial
      }

      .tag {
        background-color: inherit !important;
        border: 1px solid hsl(0, 0%, 96%)
      }
      .notification.overrideVueNotificationsIssue {
        background-color: #f5f5f5;
      }
    |     {{/nightMode}}
    link(rel='shortcut icon' href='/favicon.png')
    link(rel='icon' href='/favicon.png')
    link(rel='apple-touch-icon' href='/favicon.png')
    link(rel='alternate' type='application/rss+xml' title="Newly added videos" href='https://dev.tube/rss.xml')
    script(src='//cdnjs.cloudflare.com/ajax/libs/fetch/2.0.4/fetch.min.js')
    meta(name='apple-mobile-web-app-title' content='DevTube')
    |     {{#meta}}
    |       {{#name}}
    meta(name='{{name}}', content='{{{content}}}')
    |      {{/name}}
    |      {{^name}}
    meta(property='{{property}}', content='{{{content}}}')
    |     {{/name}}
    |   {{/meta}}
    script(type="application/ld+json").
      {{{jsonld}}}
    script.
      window.preloadedEntity = {{& preloadedEntity}}{{^preloadedEntity}}undefined{{/preloadedEntity}}
      window.newVideos = {{& newVideos}}{{^newVideos}}[]{{/newVideos}}
      window.featured = {{& featured}}{{^featured}}undefined{{/featured}}
    include yandex.pug
  body
    #vue
    include footer.pug
